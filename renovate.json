{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended"
    ],
    "customManagers": [
        {
            "customType": "regex",
            "managerFilePatterns": [
                "/gradle.properties$/"
            ],
            "matchStrings": [
                "gradleVersion\\s?=\\s?(?<currentValue>[^\\s]+)"
            ],
            "depNameTemplate": "gradle",
            "autoReplaceStringTemplate": "gradleVersion = {{{newValue}}}",
            "datasourceTemplate": "gradle-version"
        }
    ]
}
